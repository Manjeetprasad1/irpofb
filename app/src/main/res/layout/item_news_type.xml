<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layout"
    android:layout_marginEnd="@dimen/global_spacing_8"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/global_spacing_2"
        android:layout_height="@dimen/global_spacing_56"
        android:background="@color/brand_color"/>

    <TextView
        android:id="@+id/tv_news_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:gravity="center"
        android:layout_toEndOf="@+id/view"
        android:textColor="@color/black_text_color"
        android:layout_marginHorizontal="@dimen/global_spacing_2"
        android:paddingHorizontal="@dimen/global_spacing_32"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingVertical="@dimen/global_spacing_16"
        android:textSize="@dimen/global_text_size_menu_16"/>

</RelativeLayout>